# =============================================================================
# FleetDM Environment Variables
# =============================================================================
# Централізована інвентаризація endpoints через osquery
# =============================================================================

# -----------------------------------------------------------------------------
# MySQL Database
# -----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=fleet_mysql_root_CHANGE_ME
MYSQL_DATABASE=fleet
MYSQL_USER=fleet
MYSQL_PASSWORD=fleet_mysql_user_CHANGE_ME

# -----------------------------------------------------------------------------
# Fleet Server
# -----------------------------------------------------------------------------
FLEET_MYSQL_ADDRESS=mysql:3306
FLEET_MYSQL_DATABASE=fleet
FLEET_MYSQL_USERNAME=fleet
FLEET_MYSQL_PASSWORD=fleet_mysql_user_CHANGE_ME

# Redis
FLEET_REDIS_ADDRESS=redis:6379

# Server binding
FLEET_SERVER_ADDRESS=0.0.0.0:8080

# TLS Certificates (згенеруйте self-signed або використовуйте Let's Encrypt)
FLEET_SERVER_CERT=/certs/fleet.crt
FLEET_SERVER_KEY=/certs/fleet.key

# Секретний ключ для сесій (згенеруйте: openssl rand -base64 32)
FLEET_SERVER_PRIVATE_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
FLEET_LOGGING_JSON=true
FLEET_OSQUERY_STATUS_LOG_PLUGIN=filesystem
FLEET_OSQUERY_RESULT_LOG_PLUGIN=filesystem
FLEET_FILESYSTEM_STATUS_LOG_FILE=/logs/osqueryd.status.log
FLEET_FILESYSTEM_RESULT_LOG_FILE=/logs/osqueryd.results.log

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Час життя сесії (24 години)
FLEET_SESSION_DURATION=24h

# Вимкнути анонімну статистику
FLEET_SERVER_SANDBOX_ENABLED=false
