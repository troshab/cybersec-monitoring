# =============================================================================
# Cybersec Monitoring - Environment Variables Template
# =============================================================================
# Скопіюйте цей файл в .env та змініть значення на свої
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# ЗАГАЛЬНІ НАЛАШТУВАННЯ
# -----------------------------------------------------------------------------
# Часовий пояс
TZ=Europe/Kyiv

# Ім'я організації (відображається в Grafana)
ORGANIZATION_NAME=My Organization

# IP/hostname сервера моніторингу (без http://)
MONITORING_SERVER_IP=192.168.1.100

# -----------------------------------------------------------------------------
# GRAFANA
# -----------------------------------------------------------------------------
# Адміністратор Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD_123!

# Порт Grafana (за замовчуванням 3000)
GRAFANA_PORT=3000

# Секретний ключ для cookies (згенеруйте: openssl rand -hex 32)
GRAFANA_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND

# -----------------------------------------------------------------------------
# PROMETHEUS
# -----------------------------------------------------------------------------
# Порт Prometheus (за замовчуванням 9090)
PROMETHEUS_PORT=9090

# Retention період (скільки зберігати метрики)
PROMETHEUS_RETENTION_TIME=30d

# -----------------------------------------------------------------------------
# LOKI
# -----------------------------------------------------------------------------
# Порт Loki (за замовчуванням 3100)
LOKI_PORT=3100

# URL для агентів (Promtail)
LOKI_URL=http://${MONITORING_SERVER_IP}:${LOKI_PORT}

# Retention період для логів (180 днів = 6 місяців за вимогою CERT-UA)
LOKI_RETENTION_PERIOD=4320h

# -----------------------------------------------------------------------------
# ALERTMANAGER
# -----------------------------------------------------------------------------
# Порт Alertmanager
ALERTMANAGER_PORT=9093

# Email налаштування для сповіщень
SMTP_SMARTHOST=smtp.gmail.com:587
SMTP_FROM=monitoring@company.ua
SMTP_AUTH_USERNAME=monitoring@company.ua
SMTP_AUTH_PASSWORD=CHANGE_ME_APP_PASSWORD

# Email отримувача алертів
ALERT_EMAIL_TO=admin@company.ua

# Pushover (опціонально, для мобільних сповіщень)
# Отримати на https://pushover.net/
PUSHOVER_USER_KEY=
PUSHOVER_API_TOKEN=

# Telegram (опціонально)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# -----------------------------------------------------------------------------
# NETDISCO (Інвентаризація мережі)
# -----------------------------------------------------------------------------
NETDISCO_PORT=5000
NETDISCO_DB_PASSWORD=CHANGE_ME_NETDISCO_DB_PASSWORD

# SNMP community strings (через кому якщо кілька)
SNMP_COMMUNITY=public,private

# Мережі для сканування (CIDR)
DISCOVER_NETS=192.168.0.0/16,10.0.0.0/8

# -----------------------------------------------------------------------------
# FLEETDM (Інвентаризація endpoints)
# -----------------------------------------------------------------------------
FLEET_PORT=8080
FLEET_MYSQL_PASSWORD=CHANGE_ME_FLEET_MYSQL_PASSWORD
FLEET_SERVER_PRIVATE_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# -----------------------------------------------------------------------------
# WINDOWS AGENT НАЛАШТУВАННЯ
# -----------------------------------------------------------------------------
# URL Loki для Windows агентів
WINDOWS_LOKI_URL=http://${MONITORING_SERVER_IP}:${LOKI_PORT}/loki/api/v1/push

# URL FleetDM для osquery
FLEET_ENROLL_SECRET=CHANGE_ME_GET_FROM_FLEET_UI

# -----------------------------------------------------------------------------
# ТЕСТУВАННЯ (Kali)
# -----------------------------------------------------------------------------
# Цільова Windows машина для тестів
TARGET_WINDOWS_IP=192.168.1.50
TARGET_WINDOWS_USER=testuser
TARGET_WINDOWS_PASSWORD=CHANGE_ME_TEST_PASSWORD
TARGET_WINDOWS_DOMAIN=WORKGROUP

# -----------------------------------------------------------------------------
# ДОДАТКОВІ НАЛАШТУВАННЯ
# -----------------------------------------------------------------------------
# Рівень логування (debug, info, warn, error)
LOG_LEVEL=info

# Увімкнути debug режим (true/false)
DEBUG_MODE=false
